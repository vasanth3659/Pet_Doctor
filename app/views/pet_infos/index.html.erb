<p id="notice"><%= notice %></p>

<h1>Listing Pet Info</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Pet name</th>
      <th>Pet type</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Last visited date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_infos.each do |pet_info| %>
      <tr>
        <td><%= pet_info.pet_name %></td>
        <td><%= pet_info.pet_type %></td>
        <td><%= pet_info.breed %></td>
        <td><%= pet_info.age %></td>
        <td><%= pet_info.weight %></td>
        <td><%= pet_info.last_visited_date %></td>
        <td><%= link_to 'Show', pet_info %></td>
        <td><%= link_to 'Edit', edit_pet_info_path(pet_info) %></td>
        <td><%= link_to 'Destroy', pet_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

